<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <LinearLayout style="@style/Q_Linerlayout_v">

            <TextView
                android:id="@+id/tvHFI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="100dp"
                android:background="@color/colorPrimary"
                android:padding="10dp"
                android:text="Health facility Information"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView style="@style/Q_CardView">

                <LinearLayout style="@style/Q_Linerlayout_v">


                    <LinearLayout
                        android:id="@+id/llProvinceHF"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:background="@color/hitnscolor"
                        android:weightSum="2">

                        <TextView
                            style="@style/TextView"
                            android:layout_weight="1"
                            android:text="Province"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spProvinceHF"
                            style="@style/EditText_Name"
                            android:layout_weight="1"
                            android:background="@color/hitnscolor1"
                            android:entries="@array/spProvince"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llDistrictHF"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:background="@color/hitnscolor"
                        android:weightSum="2">

                        <TextView
                            style="@style/TextView"
                            android:layout_weight="1"
                            android:text="District"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spDistrictHF"
                            style="@style/EditText_Name"
                            android:layout_weight="1"
                            android:background="@color/hitnscolor1"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llTehsilHF"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:background="@color/hitnscolor"
                        android:weightSum="2">

                        <TextView
                            style="@style/TextView"
                            android:layout_weight="1"
                            android:text="Tehsil"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spTehsilHF"
                            style="@style/EditText_Name"
                            android:layout_weight="1"
                            android:background="@color/hitnscolor1"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llUC"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:background="@color/hitnscolor"
                        android:weightSum="2">

                        <TextView
                            style="@style/TextView"
                            android:layout_weight="1"
                            android:text="Union Council"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spUC"
                            style="@style/EditText_Name"
                            android:layout_weight="1"
                            android:background="@color/hitnscolor1"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/llFacilityName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:background="@color/hitnscolor"
                        android:weightSum="2">

                        <TextView
                            style="@style/TextView"
                            android:layout_weight="1"
                            android:text="Facility Name"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spFacilityName"
                            style="@style/EditText_Name"
                            android:layout_weight="1"
                            android:background="@color/hitnscolor1"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_cncl"
            style="@style/Button_collder"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="#EA4335"
            android:text="Cancel"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_sbt"
            style="@style/Button_collder"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="Submit"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>